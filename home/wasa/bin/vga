#!/bin/bash
if [[ $(xrandr | grep mm | wc -l) -eq 2 ]]; then
  xrandr --output $(xrandr | grep mm | tail -n 1 | awk '{print $1}') --off
fi
xrandr --output DP2 --off --output LVDS1 --off --output VGA1 --auto --mode 1280x1024 --primary --preferred
sleep 1
feh --bg-fill ~/images/wallpapers/checkout/pixelmavs.png
