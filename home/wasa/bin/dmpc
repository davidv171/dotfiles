#!/bin/bash

music="/home/wasa/music"
if [[ "$1" == "todo" ]]; then
  dir="todo"
else
  dir="albums"
fi

cmd=$(mpc ls $dir | sort -f | cut -d / -f 2 | dmenu -i -l 15)
if [[ "$cmd" == "" ]]; then
  echo "bye"
else
  if [[ -d "$music/$dir/$cmd" ]]; then
    mpc stop
    mpc clear
    mpc add "$dir/$cmd"
    mpc play
  else
    mpc update
  fi
fi
